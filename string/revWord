// reverse the whole world

let sentence = "JavaScript is powerful";

// Step 1: Split the sentence into words
let words = sentence.split(" "); // ["JavaScript", "is", "powerful"]

// Step 2: Reverse the words
let reversedWords = words.reverse(); // ["powerful", "is", "JavaScript"]

// Step 3: Join them back into a sentence
let reversedSentence = reversedWords.join(" ");

console.log("Original:", sentence);
console.log("Reversed by words:", reversedSentence);


function reverseByWords(str) {
    return str.split(" ").reverse().join(" ");
}

console.log(reverseByWords("Aryan is learning JavaScript"));
// Output: JavaScript learning is Aryan

